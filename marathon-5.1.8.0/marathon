PROG=`which "$0"`
DIST=`dirname $PROG`

if [ "$DIST" = "." ]
then
  DIST=`pwd`
else
  SAVED="`pwd`"
  cd "$DIST"
  DIST="`pwd`"
  cd "$SAVED"
fi

MARATHONHOME=$DIST

if [ `uname -s` = Darwin ]
then
  java -Xmx512m -Xdock:icon="$MARATHONHOME/applet.icns" -Dfile.encoding=utf8 -Dcom.apple.mrj.application.growbox.intrudes=false -Dcom.apple.mrj.application.live-resize=true -Dcom.apple.macos.smallTabs=true -Xdock:name=Marathon -Dmarathon.useAppleMenuBar=true -cp "$MARATHONHOME/UserLibs/*:$MARATHON_EXTRA_JARS:$MARATHONHOME/marathon-5.1.8.0.jar" net.sourceforge.marathon.Main $*
else
  java -Xmx512m -Dfile.encoding=utf8 -cp "$MARATHONHOME/UserLibs/*:$MARATHON_EXTRA_JARS:$MARATHONHOME/marathon-5.1.8.0.jar" net.sourceforge.marathon.Main $*
fi
